<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.criptext.monkeychatandroid"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MonkeyChat"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/chat_name">
        </activity>

        <service android:name=".MyServiceClass"/>

        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/Splash.Sample">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register">
        </activity>

        <!-- Crop Image -->
        <activity
            android:name="com.soundcloud.android.crop.CropImageActivity"
            android:theme="@style/CustomTheme"/>

        <!-- Photo View -->
        <activity
            android:name="com.criptext.monkeykitui.photoview.PhotoViewActivity"
            android:theme="@style/Theme.CustomTranslucent"/>
        <!-- Edit Image -->
        <activity
            android:name="com.criptext.monkeykitui.input.photoEditor.PhotoEditorActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBl2bCdQaQFj1AebhFSYSsHB1GzKfhXUu4"/>
    </application>

</manifest>